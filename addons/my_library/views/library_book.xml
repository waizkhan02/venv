<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem name="My Library" id="library_base_menu"/>

    <record id="library_book_action" model="ir.actions.act_window">
        <field name="name">Library Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Books"
              id="library_book_menu"
              parent="library_base_menu"
              action="library_book_action"/>

    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">Library Book Form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="make_available" string="Make Available" type="object" class="oe_highlight"
                            states="lost,borrowed"/>
                    <button name="book_rent" string="Rent this book" type="object" class="btn-primary"
                            groups="my_library.group_self_borrow"/>
                    <button name="average_book_occupation" string="log average occ." type="object"/>
                    <button name="return_all_books" string="Return all book" type="object" class="btn-primary"/>
                    <button name="make_borrowed" string="Make Borrowed" type="object" states="available"/>
                    <button name="make_lost" string="Make Lost" type="object" states="available,borrowed"/>
                    <button name="create_categories" string="Create Categories" type="object"/>
                    <button name="log_all_library_members" string="Log Members" type="object"/>
                    <button name="change_release_date" string="Update Date" type="object"/>
                    <button name="find_book" string="Find Book" type="object"/>
                    <button name="filter_books" string="Filter Book" type="object"/>
                    <button name="mapped_books" string="Mapped Authors" type="object"/>
                    <button name="sort_books" string="Sort Books" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>

                    <field name="cover" widget="image" class="oe_avatar"/>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Book Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author_ids" widget="many2many_tags"/>
                            <field name="distributor_ids" widget="many2many_tags"/>
                            <field name="publisher_id"/>
                            <field name="state"/>
                            <field name="currency_id"/>
                            <field name="retail_price"/>
                            <field name="active"/>
                            <field name="pages"/>
                            <field name="notes"/>
                            <field name="age_days"/>
                        </group>
                        <group>
                            <field name="short_name"/>
                            <field name="old_edition"/>
                            <field name="category_id"/>
                            <field name="cost_price"/>
                            <field name="date_release"/>
                            <field name="date_updated"/>
                            <field name="cover" widget="image" class="oe_avatar"/>
                            <field name="reader_rating"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">Library Book List</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_release"/>
                <field name="age_days"/>
                <field name="count"/>
                <field name="publisher_id"/>
                <field name="distributor_ids" widget="many2many_tags"/>
                <field name="publisher_city"/>
            </tree>
        </field>
    </record>

    <record id="library_book_view_search" model="ir.ui.view">
        <field name="name">Library Book Search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author_ids"/>
                <field name="distributor_ids"/>
                <filter string="No Authors" name="without_author"
                        domain="[('author_ids','=',False)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>
</odoo>